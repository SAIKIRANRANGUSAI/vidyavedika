<%- include('partials/header') %>

    <div class="no-bottom no-top" id="content">

        <section id="subheader" class="breadcrumb-section text-center"
            style="background: linear-gradient(
                rgba(0, 0, 0, 0.6), 
                rgba(0, 0, 0, 0.4)
              ),url('images/breadcrumb-img.jpg'); background-size: cover; background-position: center center; min-height: 300px; display: flex; align-items: center;">
            <div class="container relative z-2">
                <div class="row align-items-center">
                    <div class="col-lg-12">
                        <h1 class="wow fadeInUp">Student Life</h1>
                        <ul class="crumb wow fadeInDown">
                            <li><a href="/index">Home</a></li>
                            <li class="active">Student Life</li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>
        <section class="hostel-accomidation-section">
            <div class="container">
                <div class="row g-4 justify-content-center">
                    <div class="col-lg-8 text-center mb-4">
                        <h2 class="wow fadeInUp" data-wow-delay=".2s">
                            <%= studentLife.main_heading %>
                        </h2>
                        <p>
                            <%= studentLife.main_description %>
                        </p>
                    </div>
                </div>

                <div class="row g-4 mb-3 justify-content-center">
                    <% for(let i=1; i<=5; i++){ %>
                        <div class="col-lg-4 col-md-6">
                            <div class="border-gray p-20 innr-accomidation rounded-1">
                                <div class="relative wow fadeInUp">
                                    <img src="<%= studentLife['item'+i+'_image'] %>" width="50" class="mb-2" alt="">
                                    <h4>
                                        <%= studentLife['item'+i+'_heading'] %>
                                    </h4>
                                    <p class="mb-0">
                                        <%= studentLife['item'+i+'_description'] %>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <% } %>
                </div>

                <p class="text-center">
                    <%= studentLife.final_description %>
                </p>
            </div>
        </section>



        <section class="bg-dark text-light">
            <div class="container">
                <div class="row g-4">
                    <div class="col-lg-5">
                        <h2 class="wow fadeInUp" data-wow-delay=".2s">Library & Labs</h2>
                        <!-- Render short description as HTML -->
                        <p><%- library.description || "Default short description..." %></p>
                    </div>

                    <div class="col-lg-7">
                        <!-- Render long description (could be list or rich content) -->
                        <div class="ul-check fs-500">
                            <%- library.long_description || "<ul><li>Default long description...</li></ul>" %>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section>
            <div class="container">
                <div class="row g-4 gx-5 align-items-center">
                    <div class="col-lg-6">
                        <div class="row g-4">
                            <div class="col-lg-6">
                                <div class="relative rounded-1 overflow-hidden wow zoomIn">
                                    <img src="<%= sports.image1 || 'images/about-img-1.png' %>"
                                        class="w-100 wow scaleIn" alt="">
                                    <div class="de-overlay-gradient-color h-50 top-50"></div>
                                </div>
                            </div>
                            <div class="col-lg-6" data-wow-delay=".3s">
                                <div class="relative rounded-1 overflow-hidden wow zoomIn">
                                    <img src="<%= sports.image2 || 'images/about-img-2.png' %>"
                                        class="w-100 wow scaleIn" alt="">
                                    <div class="de-overlay-gradient-color h-50 top-50"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="ps-lg-3">
                            <div class="subtitle id-color wow fadeInUp" data-wow-delay=".2s">Sports & Extracurriculars
                            </div>

                            <h2 class="wow fadeInUp" data-wow-delay=".4s">
                                <%= sports.heading || 'Active Minds, Active Bodies' %>
                            </h2>
                            <p class="mb-0 wow fadeInUp" data-wow-delay=".6s">
                                <%= sports.description
                                    || 'We believe that education goes beyond academics. To ensure all-round development, we encourage students to actively participate in sports, cultural programs, and extracurricular activities. Our facilities and events provide opportunities to build teamwork, leadership, discipline, and creativity while promoting physical fitness and mental well-being.'
                                    %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="bg-light">
            <div class="container">
                <div class="row g-4 gx-5 align-items-center">
                    <div class="col-lg-6">
                        <div class="ps-lg-3">
                            <div class="subtitle id-color wow fadeInUp" data-wow-delay=".2s">Cultural Activities</div>

                            <h2 class="wow fadeInUp" data-wow-delay=".4s">
                                <%= cultural.activity_heading || 'Expressions Beyond Borders' %>
                            </h2>
                            <p class="mb-0 wow fadeInUp" data-wow-delay=".6s">
    <%- cultural.activity_description || 'We value the role of culture in shaping confident and expressive individuals. Our students actively participate in festivals, annual days, talent shows, and cultural events that celebrate creativity, tradition, and diversity. These activities not only nurture artistic talents but also build confidence, teamwork, and a sense of community among students.' %>
</p>

                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="row g-4">
                            <div class="col-lg-6">
                                <div class="relative rounded-1 overflow-hidden wow zoomIn">
                                    <img src="<%= cultural.activity_image1 || 'images/about-img-1.png' %>"
                                        class="w-100 wow scaleIn" alt="">
                                    <div class="de-overlay-gradient-color h-50 top-50"></div>
                                </div>
                            </div>
                            <div class="col-lg-6" data-wow-delay=".3s">
                                <div class="relative rounded-1 overflow-hidden wow zoomIn">
                                    <img src="<%= cultural.activity_image2 || 'images/about-img-2.png' %>"
                                        class="w-100 wow scaleIn" alt="">
                                    <div class="de-overlay-gradient-color h-50 top-50"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>


    </div>



    <%- include('partials/footer') %>