<%- include('partials/header') %>


  <div class="no-bottom no-top" id="content">
    <section id="subheader" class="breadcrumb-section text-center"
      style="background: linear-gradient(
        rgba(0, 0, 0, 0.6), 
        rgba(0, 0, 0, 0.4)
      ), url('/images/breadcrumb-img.jpg'); background-size: cover; background-position: center center; min-height: 300px; display: flex; align-items: center;">
      <div class="container relative z-2">
        <div class="row align-items-center">
          <div class="col-lg-12">
            <h1 class="wow fadeInUp">IIT JEE</h1>
            <ul class="crumb wow fadeInDown">
              <li><a href="/">Home</a></li>
              <li class="active">IIT JEE</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section>
      <div class="container">
        <div class="row gx-5">

          <!-- Main Content -->
          <div class="col-lg-8">
            <div class="blog-read">
              <div class="post-text">

                <!-- Banner Image -->
                <% if (courseView && courseView.banner_image) { %>
                  <img src="<%= courseView.banner_image %>" class="w-100 mb-4 rounded-1" alt="Course Banner">
                  <% } else { %>
                    <img src="/images/course-banner.png" class="w-100 mb-4 rounded-1" alt="Course Banner">
                    <% } %>

                      <!-- Course Content -->
                      <% if (courseView && courseView.content) { %>
                        <div class="ul-style-1">
                          <%- courseView.content %> <!-- render HTML as-is -->
                        </div>
                        <% } else { %>
                          <p class="text-muted">Course details will be updated soon...</p>
                          <% } %>

              </div>
            </div>
          </div>

          <!-- Sidebar -->
          <div class="col-lg-4">
            <div class="widget widget-post">
              <h4>Related Courses</h4>
              <ul class="de-bloglist-type-1">
                <% const courses=['MPC', 'BiPc' , 'MBipc' , 'IIT' , 'JEE' , 'NEET' ]; %>
                  <% courses.forEach(course=> { %>
                    <li>
                      <div class="d-image">
                        <img src="/images/related-corses.png" alt="<%= course %>">
                      </div>
                      <div class="d-content">
                        <a href="#">
                          <h4>
                            <%= course %>
                          </h4>
                        </a>
                        <p class="mb-0">It is a long established fact that a reader will be distracted.</p>
                      </div>
                    </li>
                    <% }) %>
              </ul>
            </div>
          </div>

        </div>
      </div>
    </section>

  </div>

  <%- include('partials/footer') %>