<%- include('partials/header') %>

    <div class="no-bottom no-top" id="content">
        <section id="subheader" class="breadcrumb-section text-center"
            style="background: linear-gradient(
                rgba(0, 0, 0, 0.6), 
                rgba(0, 0, 0, 0.4)
              ),url('images/breadcrumb-img.jpg'); background-size: cover; background-position: center center; min-height: 300px; display: flex; align-items: center;">
            <div class="container relative z-2">
                <div class="row align-items-center">
                    <div class="col-lg-12">
                        <h1 class="wow fadeInUp">Academics</h1>
                        <ul class="crumb wow fadeInDown">
                            <li><a href="/index">Home</a></li>
                            <li class="active">Academics</li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>

        <section class="academics">
            <div class="container">
                <div class="row g-4 align-items-center">
                    <div class="col-lg-7">
                        <div class="relative">
                            <div class="w-100 pe-5 pb-5 wow scaleIn sai">
                                <img src="<%= academics?.image %>" class="w-100 rounded-1" alt="">
                            </div>
                            <div class="bg-color rounded-1 text-light w-50 p-4 abs end-0 bottom-0 z-2 soft-shadow wow scaleIn"
                                data-wow-delay=".2s" alt="">
                                <i class="fa fa-quote-left fs-32 abs"></i>
                                <h4 class="ps-50">
                                    <%= academics?.sub_heading %>
                                </h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5">
                        <div class="ps-lg-3">
                            <div class="subtitle id-color wow fadeInUp" data-wow-delay=".2s">Academics</div>
                            <h2 class="wow fadeInUp" data-wow-delay=".4s">
                                <%= academics?.heading %>
                            </h2>
                            <ul>
                                <%- academics?.list_content %> <!-- Render HTML from DB -->
                            </ul>
                        </div>
                    </div>
                </div>
        </section>

        <section class="bg-dark text-light">
            <div class="container">
                <div class="row g-4">
                    <div class="col-lg-5">
                        <div class="subtitle id-color wow fadeInUp" data-wow-delay=".0s">Academic Calendar</div>
                        <h2 class="wow fadeInUp" data-wow-delay=".2s">
                            <%= calendar?.heading %>
                        </h2>
                        <div class="wow fadeInUp">
                            <%- calendar?.description %>
                        </div>
                    </div>
                    <div class="col-lg-7">
                        <div class="ul-check fs-500">
                            <%- calendar?.content %> <!-- Render HTML from DB -->
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section>
            <div class="container">
                <div class="row g-4 justify-content-center">
                    <div class="col-lg-8 text-center mb-4">
                        <div class="subtitle wow fadeInUp mb-3">Evaluating Excellence</div>
                        <h2 class="wow fadeInUp" data-wow-delay=".2s">Examination & Evaluation System</h2>
                    </div>
                </div>

                <div class="row g-4 mb-3 justify-content-center">
                    <% if (section) { %>
                        <% for (let i=1; i <=5; i++) { if (section['item'+i+'_title']) { %>
                            <div class="col-lg-4 col-md-6">
                                <div class="border-gray p-20 rounded-1">
                                    <div class="relative wow fadeInUp">
                                        <img src="<%= section['item'+i+'_image'] %>" width="50" class="mb-2" alt="">
                                        <h4>
                                            <%= section['item'+i+'_title'] %>
                                        </h4>
                                        <p class="mb-0">
                                            <%= section['item'+i+'_description'] %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <% } } %>
                                <% } %>
                </div>
            </div>
        </section>

        <section class="admissions-section">
            <div class="container">
                <div class="row g-4 align-items-center">
                    <div class="col-lg-6">
                        <div class="pe-lg-3">
                            <div class="subtitle id-color wow fadeInUp" data-wow-delay=".2s">Admissions</div>
                            <h2 class="wow fadeInUp" data-wow-delay=".4s">
                                <%= admissions?.heading %>
                            </h2>
                            <div class="wow fadeInUp" data-wow-delay=".6s">
                                <%- admissions?.description %> <!-- Render HTML from DB -->
                                    <%- admissions?.list_content || admissions?.additional_info %>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="row align-items-center">
                            <% for (let i=1; i <=3; i++) { %>
                                <div class="col-6">
                                    <img src="<%= admissions['image'+i] %>" class="w-100 rounded-1 mb-4" alt="">
                                </div>
                                <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </section>


    </div>
    <%- include('partials/footer') %>