            </div>
            <!-- Social Links Settings Section -->
            <section id="social-links-section" class="card p-4 mb-4">
                <h3 class="mb-3">Social Links & Description</h3>

                <!-- Success/Error Message -->
                <div id="socialMessage" class="alert" style="display:none;"></div>

                <!-- Social Links Form -->
                <form id="socialLinksForm">
                    <% const socialData=typeof social !=='undefined' ? social : {}; %>

                        <div class="form-group mb-3">
                            <label for="description">Description</label>
                            <textarea id="description" name="description" class="form-input w-full p-2 border rounded"
                                rows="3"><%= socialData.description || '' %></textarea>
                        </div>

                        <div class="form-group mb-3">
                            <label for="facebook">Facebook</label>
                            <input type="text" id="facebook" name="facebook"
                                class="form-input w-full p-2 border rounded" value="<%= socialData.facebook || '' %>">
                        </div>

                        <div class="form-group mb-3">
                            <label for="twitter">Twitter (X)</label>
                            <input type="text" id="twitter" name="twitter" class="form-input w-full p-2 border rounded"
                                value="<%= socialData.twitter || '' %>">
                        </div>

                        <div class="form-group mb-3">
                            <label for="instagram">Instagram</label>
                            <input type="text" id="instagram" name="instagram"
                                class="form-input w-full p-2 border rounded" value="<%= socialData.instagram || '' %>">
                        </div>

                        <div class="form-group mb-3">
                            <label for="youtube">YouTube</label>
                            <input type="text" id="youtube" name="youtube" class="form-input w-full p-2 border rounded"
                                value="<%= socialData.youtube || '' %>">
                        </div>

                        <div class="form-group mb-3">
                            <label for="whatsapp">WhatsApp</label>
                            <input type="text" id="whatsapp" name="whatsapp"
                                class="form-input w-full p-2 border rounded" value="<%= socialData.whatsapp || '' %>">
                        </div>

                        <button type="submit" class="btn btn-primary mt-2">Update Social Links</button>
                </form>
            </section>
            <script>
                const socialForm = document.getElementById('socialLinksForm');
                const socialMessage = document.getElementById('socialMessage');

                socialForm.addEventListener('submit', async (e) => {
                    e.preventDefault();

                    const formData = new URLSearchParams(new FormData(socialForm));

                    try {
                        const response = await fetch('/admin/update-social', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                            body: formData
                        });

                        const result = await response.json();

                        if (result.success) {
                            socialMessage.textContent = result.message;
                            socialMessage.className = 'alert alert-success';
                            socialMessage.style.display = 'block';
                        } else {
                            socialMessage.textContent = result.message || 'Something went wrong';
                            socialMessage.className = 'alert alert-danger';
                            socialMessage.style.display = 'block';
                        }
                    } catch (err) {
                        console.error(err);
                        socialMessage.textContent = 'Server error. Try again.';
                        socialMessage.className = 'alert alert-danger';
                        socialMessage.style.display = 'block';
                    }
                });
            </script>

