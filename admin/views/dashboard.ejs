<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard | VidyaVedika</title>
    <style>
        /* Reset & base */
        * { margin: 0; padding: 0; box-sizing: border-box; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
        body { display: flex; height: 100vh; background: #f4f6f8; }

        /* Sidebar */
        .sidebar {
            width: 220px;
            background: #007bff;
            color: white;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .sidebar h2 {
            text-align: center;
            padding: 20px 0;
            border-bottom: 1px solid rgba(255,255,255,0.2);
            font-size: 20px;
        }

        .sidebar a {
            display: block;
            color: white;
            padding: 12px 20px;
            text-decoration: none;
            transition: background 0.3s;
        }

        .sidebar a:hover {
            background: #0056b3;
        }

        .sidebar .logout {
            margin-top: auto;
            padding: 12px 20px;
            background: #dc3545;
            text-align: center;
            font-weight: bold;
        }

        .sidebar .logout:hover {
            background: #a71d2a;
        }

        /* Content */
        .content {
            flex: 1;
            padding: 30px;
            overflow-y: auto;
        }

        .content h1 {
            margin-bottom: 20px;
            color: #333;
        }

        /* Table */
        table {
            width: 100%;
            border-collapse: collapse;
            background: white;
            box-shadow: 0 4px 10px rgba(0,0,0,0.05);
            border-radius: 8px;
            overflow: hidden;
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
        }

        th {
            background: #007bff;
            color: white;
        }

        tr:nth-child(even) {
            background: #f9f9f9;
        }

        tr:hover {
            background: #e2f0ff;
        }

        /* Responsive */
        @media(max-width: 768px) {
            body { flex-direction: column; }
            .sidebar { width: 100%; height: auto; flex-direction: row; overflow-x: auto; }
            .sidebar a { flex: none; padding: 10px; white-space: nowrap; }
            .sidebar h2 { display: none; }
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h2>Admin Panel</h2>
        <a href="/admin/dashboard">Home</a>
        <a href="/admin/about">About Us</a>
        <a href="/admin/academics">Academics</a>
        <a href="/admin/courses">Courses</a>
        <a href="/admin/student-life">Student Life</a>
        <a href="/admin/gallery">Gallery</a>
        <a href="/admin/contact">Contact Us</a>
        <a href="/admin/logout" class="logout">Logout</a>
    </div>

    <!-- Main Content -->
    <div class="content">
        <h1>Contact Us Messages</h1>
        <table>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Message</th>
            </tr>
            <% contactData.forEach(c => { %>
                <tr>
                    <td><%= c.name %></td>
                    <td><%= c.email %></td>
                    <td><%= c.message %></td>
                </tr>
            <% }) %>
        </table>
    </div>

</body>
</html>
