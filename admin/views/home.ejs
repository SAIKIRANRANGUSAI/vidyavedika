            <!-- Place once (e.g., layout.ejs) -->
            <div id="deleteModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"
                style="display:none;">
                <div class="modal-dialog" role="document">
                    <div class="modal-content rounded-lg shadow-lg">
                        <div class="modal-header">
                            <h5 class="modal-title">Confirm Deletion</h5>
                            <button type="button" class="close" data-modal-close aria-label="Close">&times;</button>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to delete this banner image? This action cannot be undone.</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-modal-close>No</button>
                            <button type="button" id="deleteConfirmBtn" class="btn btn-danger">Yes, Delete</button>
                        </div>
                    </div>
                </div>
            </div>

            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    const confirmBtn = document.getElementById('deleteConfirmBtn');
                    const modalEl = document.getElementById('deleteModal');

                    // Close buttons inside modal (both the X and "No")
                    document.querySelectorAll('[data-modal-close]').forEach(btn => {
                        btn.addEventListener('click', () => hideModal());
                    });

                    // When "Yes, Delete" clicked -> navigate to delete URL
                    confirmBtn.addEventListener('click', function () {
                        const url = this.dataset.deleteUrl;
                        if (!url) {
                            console.error('Delete URL not set.');
                            hideModal();
                            return;
                        }
                        // Navigate to delete route
                        window.location.href = url;
                    });

                    // Expose function to open modal and set URL
                    window.confirmDelete = function (imagePath) {
                        if (!imagePath) return console.error('No imagePath passed to confirmDelete()');

                        // Encode the path once
                        const deleteUrl = '/admin/home/hero/delete-image?path=' + encodeURIComponent(imagePath);

                        // store on the button
                        confirmBtn.dataset.deleteUrl = deleteUrl;

                        // show modal: try Bootstrap jQuery method first; fallback to simple display
                        if (typeof $ !== 'undefined' && typeof $.fn.modal === 'function') {
                            $('#deleteModal').modal('show');
                        } else {
                            modalEl.style.display = 'block';
                            modalEl.classList.add('show');
                        }
                    };

                    function hideModal() {
                        if (typeof $ !== 'undefined' && typeof $.fn.modal === 'function') {
                            $('#deleteModal').modal('hide');
                        } else {
                            modalEl.style.display = 'none';
                            modalEl.classList.remove('show');
                        }
                    }
                });
            </script>


