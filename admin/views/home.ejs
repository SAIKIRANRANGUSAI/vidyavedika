                                testimonialDescription.value = '';
                                testimonialImageInput.value = '';
                                testimonialImagePreview.innerHTML = '';
                            } else { // edit
                                const img = this.dataset.imagePath;
                                modalTitle.textContent = 'Edit Testimonial';
                                modalSubmitButton.textContent = 'Save Changes';
                                testimonialForm.action = '/admin/home/testimonials/edit/' + this.dataset.id;
                                testimonialId.value = this.dataset.id;
                                testimonialName.value = this.dataset.name;
                                testimonialRole.value = this.dataset.role;
