            <div class="container">
                <div class="content-section">
                    <div class="section-header">
                        <h3 class="section-subtitle">Meet Our Team Members</h3>
                        <button type="button" class="btn btn-primary" onclick="openTeamModal('add')">Add New
                            Member</button>
                    </div>

                    <div class="table-responsive">
                        <table class="data-table table table-bordered">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Designation</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (members && members.length> 0) { %>
                                    <% members.forEach(member=> { %>
                                        <tr>
                                            <td><img src="<%= member.image_path %>" width="80"></td>
                                            <td>
                                                <%= member.name %>
                                            </td>
                                            <td>
                                                <%= member.designation %>
                                            </td>
                                            <td>
                                                <button class="btn btn-sm btn-primary"
