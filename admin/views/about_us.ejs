                <i class="fas fa-image"></i>
                <span>Gallery</span>
                <span class="menu-badge">12</span>
            </a>
            <a href="/admin/contacts" class="menu-item">
                <i class="fas fa-envelope"></i>
                <span>Contact Messages</span>
                <span class="menu-badge">5</span>
            </a>
        </div>
        <div class="sidebar-footer">
            <div class="user-info">
                <img src="https://placehold.co/40x40" alt="User">
                <div class="user-details">
                    <h4>Admin User</h4>
                    <span>Content Manager</span>
                </div>
            </div>
        </div>
    </div>

    <div class="main-content">
        <div class="header">
            <div class="header-left">
                <div class="toggle-sidebar">
                    <i class="fas fa-bars"></i>
                </div>
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Search...">
                </div>
            </div>
            <div class="header-right">
                <div class="user-profile" id="userProfileBtn">
                    <img src="https://placehold.co/36x36" alt="User">
                    <span>Admin User</span>
                </div>
            </div>
        </div>
        <div class="content">
            <div class="page-header">
                <h1 class="page-title">About Page Management</h1>
                <div class="breadcrumb">
                    <a href="#">Home</a>
                    <i class="fas fa-chevron-right"></i>
                    <span>Home Page</span>
                </div>
            </div>

            <div class="content-section">
                <div class="section-header">
                    <h2 class="section-title">About Us Section</h2>
                </div>
                <form action="/admin/about-us" method="POST" enctype="multipart/form-data">


                    <!-- Heading -->
                    <div class="form-group">
                        <label for="aboutHeading" class="form-label">Heading</label>
                        <input type="text" class="form-input" id="aboutHeading" name="heading"
                            value="<%= about.heading %>">
                    </div>

                    <!-- Paragraph 1 -->
                    <div class="form-group">
                        <label for="aboutParagraph1" class="form-label">Paragraph 1</label>
                        <textarea class="form-textarea" id="aboutParagraph1"
                            name="paragraph1"><%= about.paragraph1 %></textarea>
                    </div>

                    <!-- Paragraph 2 -->
                    <div class="form-group">
                        <label for="aboutParagraph2" class="form-label">Paragraph 2</label>
                        <textarea class="form-textarea" id="aboutParagraph2"
                            name="paragraph2"><%= about.paragraph2 %></textarea>
                    </div>

                    <!-- Current Image 1 -->
                    <div class="form-group">
                        <label class="form-label">Current Image 1</label>
                        <div class="image-preview-container">
                            <% if (about.image1) { %>
                                <img src="<%= about.image1 %>" alt="Current Image 1" class="image-preview">
                                <p class="mt-2">Image URL: <%= about.image1 %>
                                </p>
                                <% } else { %>
                                    <p>No image uploaded yet.</p>
                                    <% } %>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="aboutImage1" class="form-label">Upload New Image 1</label>
                        <input type="file" class="form-input" id="aboutImage1" name="image1">
                        <small class="form-text text-muted">Upload to replace current image 1.</small>
                    </div>

                    <!-- Current Image 2 -->
                    <div class="form-group">
                        <label class="form-label">Current Image 2</label>
                        <div class="image-preview-container">
                            <% if (about.image2) { %>
                                <img src="<%= about.image2 %>" alt="Current Image 2" class="image-preview">
                                <p class="mt-2">Image URL: <%= about.image2 %>
                                </p>
                                <% } else { %>
                                    <p>No image uploaded yet.</p>
                                    <% } %>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="aboutImage2" class="form-label">Upload New Image 2</label>
                        <input type="file" class="form-input" id="aboutImage2" name="image2">
                        <small class="form-text text-muted">Upload to replace current image 2.</small>
                    </div>

                    <!-- Save Button -->
                    <div class="form-footer">
                        <button type="submit" class="btn btn-primary">Save About Us Section</button>
                    </div>
                </form>
            </div>

            <div class="section-header">
                <h2 class="section-title">Vision & Mission Section</h2>
            </div>

            <form action="/admin/vision-mission" method="POST" enctype="multipart/form-data">

                <!-- Vision Heading -->
                <div class="form-group">
                    <label for="visionHeading" class="form-label">Vision Heading</label>
                    <input type="text" class="form-input" id="visionHeading" name="vision_heading"
                        value="<%= vm ? vm.vision_heading : '' %>">
                </div>

                <!-- Vision Text -->
                <div class="form-group">
                    <label for="visionText" class="form-label">Vision Text</label>
                    <textarea class="form-textarea" id="visionText"
                        name="vision_text"><%= vm ? vm.vision_text : '' %></textarea>
                </div>

                <!-- Vision Image -->
                <div class="form-group">
                    <label class="form-label">Current Vision Image</label>
                    <div class="image-preview-container">
                        <% if (vm && vm.vision_image) { %>
                            <img src="<%= vm.vision_image %>" alt="Vision Image" class="image-preview">
                            <p class="mt-2">Image URL: <%= vm.vision_image %>
                            </p>
                            <% } else { %>
                                <p>No image uploaded yet.</p>
                                <% } %>
                    </div>
                </div>
                <div class="form-group">
                    <label for="visionImage" class="form-label">Upload New Vision Image</label>
                    <input type="file" class="form-input" id="visionImage" name="vision_image">
                </div>

                <hr>

                <!-- Mission Heading -->
                <div class="form-group">
                    <label for="missionHeading" class="form-label">Mission Heading</label>
                    <input type="text" class="form-input" id="missionHeading" name="mission_heading"
                        value="<%= vm ? vm.mission_heading : '' %>">
                </div>

                <!-- Mission Text -->
                <div class="form-group">
                    <label for="missionText" class="form-label">Mission Text</label>
                    <textarea class="form-textarea" id="missionText"
                        name="mission_text"><%= vm ? vm.mission_text : '' %></textarea>
                </div>

                <!-- Mission Image -->
                <div class="form-group">
                    <label class="form-label">Current Mission Image</label>
                    <div class="image-preview-container">
                        <% if (vm && vm.mission_image) { %>
                            <img src="<%= vm.mission_image %>" alt="Mission Image" class="image-preview">
                            <p class="mt-2">Image URL: <%= vm.mission_image %>
