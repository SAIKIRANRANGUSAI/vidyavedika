                            <% } else { %>
                                <p>No image uploaded yet.</p>
                                <% } %>
                    </div>
                </div>
                <div class="form-group">
                    <label for="missionImage" class="form-label">Upload New Mission Image</label>
                    <input type="file" class="form-input" id="missionImage" name="mission_image">
                </div>

                <div class="form-footer">
                    <button type="submit" class="btn btn-primary">Save Vision & Mission</button>
                </div>
            </form>
            <br>

            <div class="section-header">
                <h2 class="section-title">Meet Our Team Section</h2>
            </div>

            <form action="/admin/team-section" method="POST">
                <!-- Heading -->
                <div class="form-group">
                    <label for="teamHeading" class="form-label">Heading</label>
                    <input type="text" class="form-input" id="teamHeading" name="heading"
                        value="<%= team ? team.heading : '' %>">
                </div>

                <!-- Description -->
                <div class="form-group">
                    <label for="teamDescription" class="form-label">Description</label>
                    <textarea class="form-textarea" id="teamDescription"
                        name="description"><%= team ? team.description : '' %></textarea>
                </div>

                <div class="form-footer">
                    <button type="submit" class="btn btn-primary">Save Team Section</button>
                </div>
